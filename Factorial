#include <stdio.h>

int fact_iterative( int n);
int fact_recursive( int n);
int main(void){

    int n;

    printf("enter a number:");
    scanf("%d",&n);

    printf("The Number %d! - %d \n", n, fact_recursive( n));

    system("pause");

}

int fact_iterative( int n){

    int i;
    int product = 1;


    for(i=n; i>= 1; i--){

    }

    return product;

}

int fact_recursive( int n){

    if(n==0)
    return 1;

    return n * fact_recursive(n-1);
}
